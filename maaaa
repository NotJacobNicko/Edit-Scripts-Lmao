local Plr = game:GetService("Players").LocalPlayer



local bossStorage = workspace:FindFirstChild("bossStorage")

local Hand = nil

local function Tag(obj)
	Plr.Character:FindFirstChild("Lantern"):Activate()
	if Plr.Character:FindFirstChild("Lantern") and Plr.Character.Lantern:FindFirstChild("Network") then
		Plr.Character.Lantern.Network:FireServer("Hit",obj)
	end
end

local Debounce = false
local Position = Plr.Character:FindFirstChild("HumanoidRootPart").Position
game:GetService("RunService").Heartbeat:Connect(function()
	if not Hand then
		for i,obj in pairs(bossStorage:GetDescendants()) do
			if obj:IsA("UnionOperation") and obj.Name == "PointerMimic" then
				Hand = obj
				break
			end
		end
	end
	if Plr.Character then
		for i,obj in pairs(Plr.Character:GetDescendants()) do
			if obj:IsA("BasePart") then
				obj.Anchored = true
			end
		end
		Plr.Character:MoveTo(Position+Vector3.new(math.random(-100,100),math.random(20,200),math.random(-100,100)))
	end
	if Hand and Hand:FindFirstChildWhichIsA("TouchTransmitter") and not Debounce then
		Debounce = true
		task.delay(1,function()
			Debounce = false
			Tag(Hand)
		end)
	end
	
	
	
end)
